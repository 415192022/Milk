<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_260"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/bg_feed_back">

        <EditText
            android:id="@+id/editContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/imgAddPic"
            android:layout_margin="@dimen/dip_15"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/please_input_feed_back"
            android:textColor="@color/lineColor"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/imgAddPic"
            android:layout_width="@dimen/dip_80"
            android:layout_height="@dimen/dip_80"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_15"
            android:scaleType="fitXY"
            android:src="@mipmap/img_add_pic" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/bg_feed_back"
        android:hint="@string/input_phone_num_feed_back_to_you"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/dip_10"
        android:textColor="@color/lineColor"
        android:textSize="@dimen/text_size_13" />

    <Button
        android:id="@+id/btnCommitFeedBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_below="@+id/lineTwo"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_30"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="@string/commit_feed_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17" />

</LinearLayout>
