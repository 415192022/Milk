<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_collection_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip_2"
    android:layout_marginRight="@dimen/dip_2"
    android:layout_marginTop="@dimen/dip_2"
    android:background="@color/bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_item_search_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_140"
        android:background="@color/white"
        android:paddingTop="@dimen/dip_10"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_item_search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_search_image"
        android:background="@color/white"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dip_3"
        android:maxLines="2"
        android:paddingBottom="@dimen/dip_5"
        android:paddingLeft="@dimen/dip_15"
        android:paddingRight="@dimen/dip_15"
        android:paddingTop="@dimen/dip_5"
        android:textColor="@color/loginEditFontColor"
        android:textSize="@dimen/text_size_14" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_search_name"
        android:background="@color/white"
        android:paddingBottom="@dimen/dip_10"
        android:paddingLeft="@dimen/dip_15"
        android:paddingRight="@dimen/dip_15">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Â¥"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_item_search_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_item_search_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/lineColor"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/lineColor"/>-->

</RelativeLayout>
