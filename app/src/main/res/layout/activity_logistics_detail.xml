<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head_view" />

    <LinearLayout
        android:id="@+id/lineTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dip_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物流公司: 申通快递"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_20"
            android:text="物流单号: 123456789987654321"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="@dimen/dip_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:text="@string/logisticsInfo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/dip_10"
               android:textSize="@dimen/text_size_14"
               android:textColor="@color/titleColor"/>

           <com.yundong.milk.view.NodeProgressView
               android:id="@+id/nodeProgressView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:nodeRadius="@dimen/dip_5"
               app:width="@dimen/dip_2" />

       </LinearLayout>

    </ScrollView>

</LinearLayout>
